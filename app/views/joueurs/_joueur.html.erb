<div id="<%= dom_id joueur %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Nom:</strong>
    <%= joueur.nom %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Image:</strong>
    <img src="<%= joueur.image %>">
    
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Content:</strong>
    <%= joueur.content %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this joueur", joueur, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this joueur', edit_joueur_path(joueur), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
